@model projetomvc_6gusta.Models.Aluno

@{
    ViewData["Title"] = "Excluir Aluno";
}

<h2>Excluir Aluno</h2>

<h4>Tem certeza que deseja excluir este aluno?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Matr√≠cula</dt>
        <dd class="col-sm-10">@Model.Matricula</dd>

        <dt class="col-sm-2">Curso</dt>
        <dd class="col-sm-10">@Model.Curso</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<form asp-action="Excluir" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
