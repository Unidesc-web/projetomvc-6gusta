@model List<projetomvc_6gusta.Models.Aluno>

@{
    ViewData["Title"] = "Lista de Alunos";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f9f9f9; /* Fundo claro */
        color: #333; /* Texto escuro */
        margin: 0;
        padding: 20px;
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #0078d4; /* Azul tecnológico */
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .search-bar {
        max-width: 400px;
        margin: 0 auto 40px auto;
        display: flex;
        gap: 10px;
    }

    .search-bar input[type="text"] {
        flex-grow: 1;
        padding: 10px 15px;
        border-radius: 25px;
        border: 1.5px solid #0078d4;
        outline: none;
        font-size: 1rem;
        background: #fff;
        color: #333;
        transition: border-color 0.3s ease;
    }

    .search-bar input[type="text"]:focus {
        border-color: #005a9e;
    }

    .search-bar button, .search-bar a {
        padding: 10px 20px;
        border-radius: 25px;
        border: none;
        cursor: pointer;
        font-weight: 600;
        color: #fff;
        background: #0078d4;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s ease;
    }

    .search-bar button:hover, .search-bar a:hover {
        background: #005a9e;
        color: white;
    }

    .btn-new {
        display: block;
        margin: 0 auto 40px auto;
        background: #005a9e;
        color: #fff;
        padding: 12px 40px;
        font-size: 1.2rem;
        border-radius: 50px;
        text-align: center;
        text-transform: uppercase;
        font-weight: 700;
        width: fit-content;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-decoration: none;
    }

    .btn-new:hover {
        background: #003d6a;
    }

    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
    }

    .card {
        background: #fff;
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 8px 20px rgb(0 120 212 / 0.15);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        color: #333;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 16px 40px rgb(0 120 212 / 0.3);
    }

    .card h3 {
        margin: 0 0 10px 0;
        color: #0078d4;
        font-weight: 700;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .card p {
        margin: 5px 0;
        font-size: 0.95rem;
        color: #555;
    }

    .card .actions {
        margin-top: 20px;
        display: flex;
        gap: 15px;
    }

    .card .actions a {
        flex: 1;
        padding: 10px 0;
        text-align: center;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        color: #fff;
        transition: background-color 0.3s ease;
    }

    .btn-edit {
        background: #f0ad4e;
        color: #333;
    }

    .btn-edit:hover {
        background: #d8962b;
        color: #fff;
    }

    .btn-delete {
        background: #d9534f;
    }

    .btn-delete:hover {
        background: #b52b27;
        color: #fff;
    }
</style>

<h2>Lista de Alunos</h2>

<form method="get" class="search-bar" role="search">
    <input type="text" name="busca" placeholder="Buscar por nome" value="@Context.Request.Query["busca"]" aria-label="Buscar por nome" />
    <button type="submit">Buscar</button>
    <a href="@Url.Action("Index")">Limpar</a>
</form>

<a href="@Url.Action("Criar")" class="btn-new">+ Novo Aluno</a>

<div class="card-grid">
    @foreach (var aluno in Model)
    {
        <div class="card">
            <h3>@aluno.Nome</h3>
            <p><strong>Matrícula:</strong> @aluno.Matricula</p>
            <p><strong>Curso:</strong> @aluno.Curso</p>
            <p><strong>Email:</strong> @aluno.Email</p>

            <div class="actions">
                <a href="@Url.Action("Editar", new { id = aluno.Id })" class="btn-edit">Editar</a>
                <a href="@Url.Action("Excluir", new { id = aluno.Id })" class="btn-delete">Excluir</a>
            </div>
        </div>
    }
</div>
